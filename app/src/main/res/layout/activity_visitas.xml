                <EditText
                    android:id="@+id/configuracion_visita_minuto_inicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_enabled"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin10dp"
                android:padding="@dimen/margin10dp"
                android:background="@drawable/border_layout_subpreguntas">
                <TextView
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text="Variable HORA FINAL"
                    android:layout_marginRight="@dimen/margin10dp"/>
                <EditText
                    android:id="@+id/configuracion_visita_hora_final"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/edittext_enabled"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin10dp"
                android:padding="@dimen/margin10dp"
                android:background="@drawable/border_layout_subpreguntas">
                <TextView
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text="Variable MINUTO FINAL"
                    android:layout_marginRight="@dimen/margin10dp"/>
                <EditText
