                <EditText
                    android:id="@+id/configuracion_visita_resultado"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/edittext_enabled"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
