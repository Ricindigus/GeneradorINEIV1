<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margenMaterial"
    android:orientation="vertical"
    tools:context="pe.com.ricindigus.generadorinei.fragments.creacion.PreguntasFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PREGUNTAS"
        android:gravity="center"
        android:textColor="@color/colorIcons"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin5dp"
        android:paddingRight="@dimen/margin5dp"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textColor="@color/colorIcons"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="MODULO"
            android:textColor="@color/colorIcons"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="PAGINA"
            android:textColor="@color/colorIcons"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="NUMERO"
            android:textColor="@color/colorIcons"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="TIPO"
            android:textColor="@color/colorIcons"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/margin10dp"
        android:background="@drawable/borde_layout_preguntas">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/pregunta_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_preguntas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_agregar"
            app:backgroundTint="@color/colorPrimaryDark"
            android:layout_margin="@dimen/margenMaterial"/>
    </RelativeLayout>


</LinearLayout>

