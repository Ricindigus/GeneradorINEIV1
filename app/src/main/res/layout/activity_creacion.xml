<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pe.com.ricindigus.generadorinei.activities.activities_creacion.CreacionActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="@dimen/margenMaterial"
        android:textSize="@dimen/textGrande"
        android:textColor="@color/colorIcons"
        android:text="MÓDULO: CREACIÓN DE ENCUESTAS"
        android:background="@color/colorPrimary"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/creacion_encuesta">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margenMaterial"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#771976D2">
            <ImageView
                android:layout_marginBottom="@dimen/margin10dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/logo_inei_blanco"/>
            <LinearLayout
                android:id="@+id/creacion_lyt_cargar"
                android:layout_width="400dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="@dimen/margin5dp"
                android:background="@drawable/boton_cargar"
                android:layout_marginTop="@dimen/margin10dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/margin10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cargar_encuesta" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Cargar Encuesta"
                    android:textColor="@color/colorIcons"
                    android:textSize="30sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/creacion_lyt_crear"
                android:layout_width="400dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="@dimen/margin5dp"
                android:layout_marginTop="@dimen/margin10dp"
                android:background="@drawable/boton_cargar">
                <ImageView
                    android:padding="@dimen/margin10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/crear_encuesta" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Crear Encuesta"
                    android:textColor="@color/colorIcons"
                    android:textSize="30sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/creacion_lyt_editar"
                android:layout_width="400dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="@dimen/margin5dp"
                android:layout_marginTop="@dimen/margin10dp"
                android:background="@drawable/boton_cargar">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/margin10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/editar_encuesta" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Editar Encuesta"
                    android:textColor="@color/colorIcons"
                    android:textSize="30sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/creacion_lyt_exportar"
                android:layout_width="400dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="@dimen/margin5dp"
                android:layout_marginTop="@dimen/margin10dp"
                android:background="@drawable/boton_cargar">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/margin10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/exportar_encuesta" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Exportar Encuesta"
                    android:textColor="@color/colorIcons"
                    android:textSize="30sp" />
            </LinearLayout>
            <Button
                android:id="@+id/creacion_btnCerrarSesion"
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:text="CERRAR SESION"
                android:theme="@style/RaisedButtonDark2"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
