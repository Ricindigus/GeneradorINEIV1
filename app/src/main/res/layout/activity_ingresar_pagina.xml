<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pe.com.ricindigus.generadorinei.activities.activities_creacion.activities_preguntas.ConfiguracionPaginaActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin5dp"
        android:paddingRight="@dimen/margin5dp"
        android:background="@color/colorPrimary">
        <Button
            android:id="@+id/pagina_btnCancelar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="cancelar"
            android:textColor="@color/colorIcons"
            android:background="@drawable/boton_cargar"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONFIGURAR PÁGINA"
                android:textSize="@dimen/textoMedium"
                android:textStyle="bold"
                android:textColor="@color/colorIcons"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/pagina_txtId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/textoMedium"
                android:textStyle="bold"
                android:textColor="@color/colorIcons"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - MÓDULO "
                android:textSize="@dimen/textoMedium"
                android:textStyle="bold"
                android:textColor="@color/colorIcons"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/pagina_txtModulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/textoMedium"
                android:textStyle="bold"
                android:textColor="@color/colorIcons"
                android:gravity="center"
                />
        </LinearLayout>
        <Button
            android:id="@+id/pagina_btnGuardar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="guardar"
            android:textColor="@color/colorIcons"
            android:background="@drawable/boton_cargar"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margenMaterial">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRIMERA PREGUNTA"/>
            <EditText
                android:id="@+id/pagina_txtN1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NÚMERO"
                android:inputType="numberPassword"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/pagina_spTipo1"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_marginTop="@dimen/margin10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SEGUNDA PREGUNTA"/>

            <EditText
                android:id="@+id/pagina_txtN2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NÚMERO"
                android:inputType="numberPassword"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/pagina_spTipo2"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_marginTop="@dimen/margin10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TERCERA PREGUNTA"/>

            <EditText
                android:id="@+id/pagina_txtN3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:hint="NÚMERO"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/pagina_spTipo3"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_marginTop="@dimen/margin10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CUARTA PREGUNTA"/>

            <EditText
                android:id="@+id/pagina_txtN4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NÚMERO"
                android:inputType="numberPassword"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/pagina_spTipo4"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_marginTop="@dimen/margin10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QUINTA PREGUNTA"
                android:layout_marginBottom="@dimen/margin10dp"/>

            <EditText
                android:id="@+id/pagina_txtN5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NÚMERO"
                android:inputType="numberPassword"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/pagina_spTipo5"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_marginTop="@dimen/margin10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SEXTA PREGUNTA"/>

            <EditText
                android:id="@+id/pagina_txtN6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NÚMERO"
                android:inputType="numberPassword"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/pagina_spTipo6"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_marginTop="@dimen/margin10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SETIMA PREGUNTA"/>

            <EditText
                android:id="@+id/pagina_txtN7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NÚMERO"
                android:inputType="numberPassword"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/pagina_spTipo7"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_marginTop="@dimen/margin10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OCTAVA PREGUNTA"/>

            <EditText
                android:id="@+id/pagina_txtN8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NÚMERO"
                android:inputType="numberPassword"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/pagina_spTipo8"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_marginTop="@dimen/margin10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOVENA PREGUNTA"/>

            <EditText
                android:id="@+id/pagina_txtN9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NÚMERO"
                android:inputType="numberPassword"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/pagina_spTipo9"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_marginTop="@dimen/margin10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DÉCIMA PREGUNTA"/>

            <EditText
                android:id="@+id/pagina_txtN10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NÚMERO"
                android:inputType="numberPassword"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/pagina_spTipo10"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
